{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "editor.formatOnSave": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "jsxSingleQuote": true,
        "semi": true
      }
    ]
  }
}
