{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "overrides": [
    {
        "files": [ "serviceWorker.js" ],
        "rules": { "no-unused-expressions": "off" }
    }
  ],
  "rules": {
    "no-console": 2,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "editor.formatOnSave": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "jsxSingleQuote": true,
        "semi": true
      }
    ]
  }
}
